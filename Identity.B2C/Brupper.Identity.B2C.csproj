<Project Sdk="MSBuild.Sdk.Extras/2.0.54">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>xamarin.ios10;monoandroid10.0;netstandard2.1;netstandard2.0;netcoreapp3.1</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="B2CAuthenticationService.cs" />
  </ItemGroup>

  <ItemGroup Condition="!$(TargetFramework.StartsWith('netcoreapp'))">
    <PackageReference Include="MvvmCross" Version="7.0.0" />
    <PackageReference Include="Microsoft.Identity.Client" Version="4.16.0" />

    <Compile Include="B2CAuthenticationService.cs" />
  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('netcoreapp'))">
    <Compile Remove="B2CAuthenticationService.cs" />
  </ItemGroup>

</Project>
