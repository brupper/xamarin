  </ItemGroup>

  <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid')) or $(TargetFramework.EndsWith('android'))">
    <PackageReference Include="Plugin.CurrentActivity" />
  </ItemGroup>

</Project>
