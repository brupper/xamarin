<StackLayout
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Brupper.Maui.Views.MasterDetailsMenuOptionView"
    x:Name="View"
    Padding="0,8"
    Margin="24,8,8,8"
    HorizontalOptions="FillAndExpand"
    Orientation="Horizontal">

    <Image x:Name="Icon" Source="{x:Null}" Aspect="AspectFit" WidthRequest="24" HeightRequest="24" />

    <Label x:Name="Label" FontSize="20" HorizontalOptions="StartAndExpand" VerticalOptions="Center" TextColor="White"/>

    <StackLayout.GestureRecognizers>
        <TapGestureRecognizer BindingContext="{x:Reference View}" Tapped="Handle_Tapped" />
    </StackLayout.GestureRecognizers>
</StackLayout>